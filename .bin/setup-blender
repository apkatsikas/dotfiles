#!/usr/bin/env bash
set -e

addon_path="${HOME}/.config/blender/2.79/scripts/addons"

echo 'Install gimp plugins...'

mkdir -p "${addon_path}"
wget -O "${addon_path}/vse-loop.py" 'https://raw.githubusercontent.com/mutantbob/blender-vse-loop/master/vse-loop.py'
wget -O "${addon_path}/VSE_Transform_Tool.py" 'https://raw.githubusercontent.com/kgeogeo/VSE_Transform_Tools/master/VSE_Transform_Tool.py'

# Blender Power sequencer
wget -O /tmp/power-sequencer.zip 'https://github.com/GDquest/Blender-power-sequencer/releases/download/1.1.0/power-sequencer-1.1.zip'
unzip /tmp/power-sequencer.zip -d "${addon_path}"
chmod -R g-rwx "${addon_path}/power-sequencer/"
chmod -R o-rwx "${addon_path}/power-sequencer/"
