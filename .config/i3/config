# Emoti/emoticon selection
bindsym $mod+slash exec "$HOME/.bin/splatmoji/splatmoji type"
# Lastpass cli popups
## Password to clipboard
bindsym $mod+l exec "$HOME/.bin/lastpass-dmenu"
## Password typed out by xdotool
bindsym $mod+Control+l exec "$HOME/.bin/lastpass-dmenu --typeit"
# PCManfm-qt GUI file browser
bindsym $mod+z exec pcmanfm-qt
# Screenshot: shutter screenshot full desktop
bindsym Print exec "shutter --remove_cursor --exit_after_capture --no_session --full --output=~/downloads/screenshot-%Y-%m-%d--%H:%M:%S.full.png"
# Screenshot: shutter screenshot focused window
bindsym Shift+Print exec "shutter --remove_cursor --exit_after_capture --no_session --full --active --output=~/downloads/screenshot-%Y-%m-%d--%H:%M:%S.window.png"
# Screenshot: shutter screenshot with selection
bindsym $mod+Shift+Print exec "shutter --remove_cursor --exit_after_capture --no_session --select --output=~/downloads/screenshot-%Y-%m-%d--%H:%M:%S.selection.png"
# Screenshot: full X sreeen dump with xwd, save with imagemagick
bindsym $mod+Control+Shift+Print exec "xwd -silent -root | convert xwd:- ~/downloads/screenshot-$(date '+%Y-%m-%d--%H:%M:%S').fullx.png"
# Terminal
bindsym $mod+t exec i3-sensible-terminal
# Vim-anywhere
bindsym Control+Mod1+v exec "$HOME/.bin/vim-anywhere/bin/run"
# Vim-anywhere as above but prepopulate with clipboard contents
bindsym Shift+Mod1+v exec "$HOME/.bin/vim-anywhere/bin/run -c"
# Calculator qalc simple pop via rofi
bindsym $mod+c exec "rofi -show calc -modi 'calc:qalc +u8 -nocurrencies'"
# i3 show key combos
bindsym $mod+i exec "$HOME/.bin/i3keys"

# Brightness controls
bindsym XF86MonBrightnessUp exec sudo $HOME/.bin/bright up; exec notify-send -t 1 "Brightness: $($HOME/.bin/bright current)%"
bindsym XF86MonBrightnessDown exec sudo $HOME/.bin/bright down; exec notify-send -t 1 "Brightness: $($HOME/.bin/bright current)%"

# Media keys
bindsym XF86AudioRaiseVolume exec amixer -q set Master 10%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 10%- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle
# Volume incr/decr will: increase volume, play a noise to indicate change, notify the current volume in popup, and then make sure the bar updates the value
# Increase
bindsym $mod+plus exec amixer -D pulse sset Master 10%+; exec $dripsound; exec notify-send -t 1 --icon=gtk-info Vol $mastervol; exec $update_i3blocks
bindsym $mod+KP_Add exec amixer -D pulse sset Master 10%+; exec $dripsound; exec notify-send -t 1 --icon=gtk-info Vol $mastervol; exec $update_i3blocks
# Decrease
bindsym $mod+minus exec amixer -D pulse sset Master 10%-; exec $dripsound; exec notify-send -t 1 --icon=gtk-info Vol $mastervol; exec $update_i3blocks
bindsym $mod+KP_Subtract exec amixer -D pulse sset Master 10%-; exec $dripsound; exec notify-send -t 1 --icon=gtk-info Vol $mastervol; exec $update_i3blocks
# Sorta not-really mute (volume to zero)
bindsym $mod+m exec amixer -D pulse sset Master 0%; exec notify-send -t 1 --icon=gtk-info Vol $mastervol; exec $update_i3blocks



#
# UI Navigation
#
# Workspaces
bindsym $mod+semicolon workspace prev
bindsym $mod+apostrophe workspace next
bindsym $mod+x move workspace to output right
# Cycle windows (in workspace)
bindsym $mod+Tab exec --no-startup-id ~/.config/i3/focus-next-visible.py
bindsym $mod+Shift+Tab exec --no-startup-id ~/.config/i3/focus-next-visible.py reverse
# Lock screen
bindsym Mod1+Control+l exec $lock_cmd
